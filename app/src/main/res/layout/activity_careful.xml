<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_cont2">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff000000"
        android:alpha="0.3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/main_menu">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <!--
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_cont2"
                    android:scaleType="centerCrop"/>
    -->



                <LinearLayout
                    android:id="@+id/careful_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="저의 숨 소리가 느껴지나요?"
                        android:textColor="#ffffffff"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="25dp"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/careful_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/careful_title"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/time_w_36dp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="잠깐만 시간 좀 내줘요."
                                android:textColor="#ffffffff"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="저희도 숨쉬는 생명이예요. 잠시면 되요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="일주일에 단 한번 5분이라도"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="시간 내주세요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/careful_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/careful_text1"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/water_w_36dp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="처음 키워보는 사람들에게"
                                android:textColor="#ffffffff"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="우리 G2PH 식물들은"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="어렵지 않게 키울 수 있어요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="조금의 시간으로 좋은 공기"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="유지할 수 있답니다."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/careful_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/careful_text2"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/flower_w_36dp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="키우기 쉬운 식물 있을까요?"
                                android:textColor="#ffffffff"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="50dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="가장 키우기 쉬운 면서 좋은 건"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="산세베리아 라는 친구예요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="물도 적게 줄 수 있고"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="무엇보다 강한 생명력에 방출 음이온까지"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="여러가지로 가장 이로운 식물이예요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"/>



                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/careful_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/careful_text3"
                    android:layout_margin="25dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sunny_w_36dp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="주의 해야 될 부분!"
                                android:textColor="#ffffffff"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="식물마다 햇빛의 유무성이 필요한"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="친구들도 있고 장소에 제한되는"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="저에 대해서 알아가는 과정이"
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="어느 정도는 필요해요."
                            android:textColor="#ffffffff"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:gravity="right"/>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>